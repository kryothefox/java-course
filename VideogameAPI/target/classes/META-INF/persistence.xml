<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="VideogamePU" transaction-type="JTA">
    <jta-data-source>java:/videogameDB</jta-data-source>
    <class>com.gregor.videogameapi.models.AddedByStatus</class>
    <class>com.gregor.videogameapi.models.EsrbRatings</class>
    <class>com.gregor.videogameapi.models.GamePlatforms</class>
    <class>com.gregor.videogameapi.models.GameStores</class>
    <class>com.gregor.videogameapi.models.Games</class>
    <class>com.gregor.videogameapi.models.Genres</class>
    <class>com.gregor.videogameapi.models.ParentPlatforms</class>
    <class>com.gregor.videogameapi.models.Platforms</class>
    <class>com.gregor.videogameapi.models.Ratings</class>
    <class>com.gregor.videogameapi.models.Requirements</class>
    <class>com.gregor.videogameapi.models.Screenshots</class>
    <class>com.gregor.videogameapi.models.Stores</class>
    <class>com.gregor.videogameapi.models.Tags</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
</persistence>
